{{!-- Allows this template access to '_globals' object in course.json --}}
{{import_globals}}

{{#any displayTitle body instruction}}
<div class="component__header m-{{lowercase _component}}__header">
  <div class="component__header-inner m-{{lowercase _component}}__header-inner">

    {{#if displayTitle}}
    <div class="component__title m-{{lowercase _component}}__title">
      <div class="component__title-inner m-{{lowercase _component}}__title-inner" {{{a11y_attrs_heading "component"}}}>
        {{{compile displayTitle this}}}
      </div>
    </div>
    {{/if}}

    {{#if body}}
    <div class="component__body m-{{lowercase _component}}__body">
      <div class="component__body-inner m-{{lowercase _component}}__body-inner">
        {{{compile_a11y_text body this}}}
      </div>
    </div>
    {{/if}}

    {{#any instruction mobileInstruction}}
    <div class="component__instruction m-{{lowercase _component}}__instruction">
      <div class="component__instruction-inner m-{{lowercase _component}}__instruction-inner">
        {{{compile_a11y_text instruction this}}}
      </div>
    </div>
    {{/any}}

  </div>
</div>
{{/any}}
