{{!-- Allows this template access to '_globals' object in course.json --}}
{{import_globals}}

<div class="page__inner">
  {{{a11y_aria_label _globals._accessibility._ariaLabels.page}}}

  {{#any displayTitle body instruction}}
  <div class="page__header">
    <div class="page__header-inner">

      {{#if displayTitle}}
      <div class="page__title">
        <div class="page__title-inner" {{{a11y_attrs_heading "page"}}}>
          {{{compile displayTitle this}}}
        </div>
      </div>
      {{/if}}

      {{#any body pageBody}}
      <div class="page__body">
        <div class="page__body-inner">
          {{#if pageBody}}
            {{{compile_a11y_text pageBody this}}}
          {{else}}
            {{{compile_a11y_text body this}}}
          {{/if}}
        </div>
      </div>
      {{/any}}

      {{#if instruction}}
      <div class="page__instruction">
        <div class="page__instruction-inner">
          {{{compile_a11y_text instruction this}}}
        </div>
      </div>
      {{/if}}

    </div>
  </div>
  {{/any}}

  <div class="article__container">
    {{!-- Articles render here --}}
  </div>

</div>
