{{!-- Allows this template access to '_globals' object in course.json --}}
{{import_globals}}

<div class="block__inner">

  {{#any displayTitle body instruction }}
  <div class="block__header">
    <div class="block__header-inner">

      {{#if displayTitle}}
      <div class="block__title">
        <div class="block__title-inner" {{{a11y_attrs_heading "block"}}}>
          {{{compile displayTitle this}}}
        </div>
      </div>
      {{/if}}

      {{#if body}}
      <div class="block__body">
        <div class="block__body-inner">
          {{{compile_a11y_text body this}}}
        </div>
      </div>
      {{/if}}

      {{#if instruction}}
      <div class="block__instruction">
        <div class="block__instruction-inner">
          {{{compile_a11y_text instruction this}}}
        </div>
      </div>
      {{/if}}

    </div>
  </div>
  {{/any}}

  <div class="component__container u-clearfix">
    {{!-- Components render here --}}
  </div>

</div>
