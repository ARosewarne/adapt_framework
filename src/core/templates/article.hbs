{{!-- Allows this template access to '_globals' object in course.json --}}
{{import_globals}}

<div class="article__inner">

  {{#any displayTitle body instruction }}
  <div class="article__header">
    <div class="article__header-inner">

      {{#if displayTitle}}
      <div class="article__title">
        <div class="article__title-inner" {{{a11y_attrs_heading "article"}}}>
          {{{compile displayTitle this}}}
        </div>
      </div>
      {{/if}}

      {{#if body}}
      <div class="article__body">
        <div class="article__body-inner">
          {{{compile_a11y_text body this}}}
        </div>
      </div>
      {{/if}}

      {{#if instruction}}
      <div class="article__instruction">
        <div class="article__instruction-inner">
          {{{compile_a11y_text instruction this}}}
        </div>
      </div>
      {{/if}}

    </div>
  </div>
  {{/any}}

  <div class="block__container">
    {{!-- Blocks render here --}}
  </div>

</div>
